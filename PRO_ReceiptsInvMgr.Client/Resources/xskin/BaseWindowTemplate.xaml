    </Style>
    
    <Style x:Key="MaxButtonStyle"
           TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border x:Name="border"
                                BorderThickness="0,0,0,0"
                                CornerRadius="0"
                                BorderBrush="#80000000">

                            <Rectangle x:Name="rectangle"
                                       Stroke="Black"
                                       StrokeThickness="0"
                                       Fill="{TemplateBinding Background}" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused"
                                 Value="True" />
                        <Trigger Property="IsDefaulted"
                                 Value="True" />
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="border">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1"
                                                         StartPoint="0.5,0">
                                        <GradientStop Color="#66FFFFFF"
                                                      Offset="0" />
                                        <GradientStop Offset="0.379"
                                                      Color="#24FFFFFF" />
                                        <GradientStop Color="#13FFFFFF"
                                                      Offset="0.741" />
                                        <GradientStop Color="Transparent"
                                                      Offset="0.879" />
                                        <GradientStop Color="#47FFFFFF"
                                                      Offset="0.978" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        
                        <Trigger Property="IsEnabled"
                                 Value="False" />
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SysButtonStyle"
           TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border x:Name="border"
                                BorderBrush="#80000000"
                                BorderThickness="0,0,0,0"
                                CornerRadius="0,0,3,0">

                            <Rectangle Name="rectangle" Stroke="Black"
                                       StrokeThickness="0">
                                <Rectangle.Fill>
                                    <ImageBrush  ImageSource="/Resources/xskin/icon/fp-btn_04.png"
                                          RenderOptions.BitmapScalingMode="NearestNeighbor"       Stretch="None" />
                                </Rectangle.Fill>
                            </Rectangle>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Fill"
                                    TargetName="rectangle">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/PRO_ReceiptsInvMgr.Client;component/Resources/xskin/icon/fp-btn-hover_04.png"></ImageBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
